@{
    ViewData["Title"] = "Home Page";
    var funcionarios = ViewData["Funcionarios"] as IEnumerable<Funcionario>;
}

<div class="d-flex align-items-center justify-content-between">
    <h5>
        Funcionários
    </h5>
    <a asp-controller="Home" asp-action="Novo">
        Novo Funcionário 
    </a>
</div>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Código</th>
            <th scope="col">Nome</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in funcionarios)
        {
            {
            <tr>
                <th scope="row">@item.PK_Funcionario</th>
                <td>@item.Nome</td>
                <td>
                    <a asp-controller="Home" asp-action="Alterar" asp-route-key=@item.PK_Funcionario>
                        alterar
                    </a>
                </td>
                <td>
                    <a onClick="onExcluir(event)" asp-controller="Home" asp-action="ExcluirFuncionario" asp-route-key=@item.PK_Funcionario>
                        excluir 
                    </a>
                </td>
            </tr>
            }
        }
    </tbody>
</table>

<script>
    function onExcluir(event) {
        const remove = confirm("Excluir?");

        if (remove === false) {
            event.preventDefault();
        }
    }
</script>
